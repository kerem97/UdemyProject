@model CreateNewUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Otel Üye Kayıt Paneli</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/quixlab-main/theme/assets/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link href="~/quixlab-main/theme/css/style.css" rel="stylesheet">

</head>

<body class="h-100">

    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>


    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">

                                <a class="text-center" href="index.html"> <h4>Otel Giriş Paneli</h4></a>

                                <form class="mt-5 mb-5 login-input" method="post">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Adınız" required asp-for="Name">
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Soyadınız" required asp-for="Surname">
                                        <span asp-validation-for="Surname"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Kullanıcı Adınız" required asp-for="UserName">
                                        <span asp-validation-for="UserName"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Şehir Bilgisi" required asp-for="City">
                                        <span asp-validation-for="City"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control" placeholder="Mail Adresiniz" required asp-for="Mail">
                                        <span asp-validation-for="Mail"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Şifre" required asp-for="Password">
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Şifre Tekrar" required asp-for="ConfirmPassword">
                                        <span asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                    <button class="btn login-form__btn submit w-100">Kayıt ol</button>
                                </form>
                                <p class="mt-5 login-form__footer">Hesabınız varsa burdan  <a href="/Login/Index/" class="text-primary">Giriş Yapabilirsiniz </a></p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>




    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/quixlab-main/theme/plugins/common/common.min.js"></script>
    <script src="~/quixlab-main/theme/js/custom.min.js"></script>
    <script src="~/quixlab-main/theme/js/settings.js"></script>
    <script src="~/quixlab-main/theme/js/gleek.js"></script>
    <script src="~/quixlab-main/theme/js/styleSwitcher.js"></script>
</body>
</html>





